@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http.Authentication

@model Dsms.ViewModels.DME001_001ViewModel
@using Dsms.Controllers
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "ログイン";
    Layout = "_Layout";
}
<!--プログラム名+ユーザー名-->
<div class="container" style="margin-top:100px">
    <div class="alert alert-secondary ">
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <b>ログイン(DME001_001)</b>
            </div>
        </div>
    </div>
    <!--システムメンテンス中-->
    <div asp-validation-summary="All" class="text-danger"></div>
    <!--ユーザID・パスワード入力フォーム-->
    <form class="form-horizontal needs-validation" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="form-group row">
                    <div class="col-md-2 col-lg-2"></div>
                    <label asp-for="UserCd" class="control-label col-md-2 col-lg-2"></label>
                    <div class="form-inline">
                        <input asp-for="UserCd" class="form-control" />
                        <div class="invalid-feedback">
                            <span asp-validation-for="UserCd" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2 col-lg-2"></div>
                    <label asp-for="Password" class="control-label col-md-2 col-lg-2"></label>
                    <div class="form-inline">
                        <input asp-for="Password" class="form-control" />
                        <div class="invalid-feedback">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--ログインボタン-->
        <div class="row form-group">
            <div class="col-md-4 col-lg-4"></div>
            <button 
                type="submit"
                asp-area="DME001"
                asp-controller="DME001_001"
                asp-action="Login" 
                class="btn btn-primary"
            >ログイン</button>
        </div>
    </form>
    <!--モーダル-->
    <div class="row">
        <div class="col-md-10 text-center">
            パスワードを忘れた方は<a href="#" data-toggle="modal" data-target="#myModal">こちら</a>
        </div>
    </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">パスワード照会</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="card bg-light text-dark">
                            <div class="card-body">
                                <p>パスワードを照会します。</p>
                                <p>ユーザIDを入力して「次へ」ボタンを押下してください。</p>
                                <p>(登録されたメールアドレスにパスワード再発行手続きのメールを送信します)</p>
                            </div>
                        </div>
                    </div>
                    <form method="post" action="" class="form-horizontal" role="form">
                        <div class="form-group row">
                            <div class="col-md-1 col-lg-1"></div>
                            <div class="col-md-3 col-lg-2 form-inline">
                                <label for="userid" class="control-label"><b>ユーザID</b></label>
                            </div>
                            <div class="col-md-5">
                                <input class="form-control" id="userid">
                            </div>
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">&nbsp;次へ&nbsp;</button>
                        <button type="button" class="btn" data-dismiss="modal">キャンセル</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
